FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache openssl

COPY package*.json ./

RUN npm install

# Install ts-node globally for running the worker directly or use npx
RUN npm install -g ts-node typescript

COPY . .

RUN npx prisma generate

# We can run directly with ts-node for simplicity in dev
CMD ["npx", "ts-node", "worker/index.ts"]
